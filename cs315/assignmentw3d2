<script>
    
    let btn = document.getElementById("btn")
    btn.addEventListener('click',form)


function form(){
  let pwd1 = document.getElementById('pwd1').value
  let pwd2 = document.getElementById('pwd2').value
  if(pwd1 !== pwd2){
    alert('Passwords must match.')
    return false
  }
  if(pwd1.length < 8 && pwd1.length > 14){
  alert('password length must be between 8 - 14 charactersics')
  return false
   
  }
  let passw=  /^[A-Za-z]\w{7,14}$/
  if(!pwd1.match(passw)){
    alert('password must have at least one special character')
    
  }

}
</script>
